@using Microsoft.AspNetCore.Identity
@using Upfirst.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-culture=@culture title="Manage" localize-args="@(new[] { User.Nome()})">Hello {0} !</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-culture=@culture asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-white" localize-content>Logout</button>
    </form>
}
else
{
    <a class="btn btn-outline-success mr-2" asp-area="Identity" asp-page="/Account/Login" asp-route-culture=@culture localize-content>Login</a>
    @*<a class="btn btn-outline-success my-2 my-sm-0" asp-area="Identity" asp-page="/Account/Register" asp-route-culture=@culture localize-content>Register</a>*@
}
