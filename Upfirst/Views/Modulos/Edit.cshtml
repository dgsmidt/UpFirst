@model DAL.Models.Modulo

@{
    ViewData["Title"] = "Edit";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h4 localize-content>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Curso" class="control-label" localize-content></label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroModulo" class="control-label" localize-content>Module Sequence</label>
                <input asp-for="NumeroModulo" class="form-control" />
                <span asp-validation-for="NumeroModulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label" localize-content>Module Name</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Text("Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Cursos" asp-action="Index" asp-route-id="@Model.CursoId" asp-route-moduloId="@Model.Id" localize-content>Back to Courses</a>
</div>

