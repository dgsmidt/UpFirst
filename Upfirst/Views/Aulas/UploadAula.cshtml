@model Upfirst.ViewModels.UploadFile
@{
    ViewData["Title"] = "UploadLogo";
}

<h1>Aula Upload</h1>

<form enctype="multipart/form-data" method="post">
    <div class="form-group col-md-3">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control">
    </div>
    <dl>
        @*<dt>
                <label asp-for="@Model.FormFile"></label>
            </dt>*@
        <dd>
            <input asp-for="@Model.FormFile" type="file">
            <span asp-validation-for="@Model.FormFile"></span>
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload" />
</form>