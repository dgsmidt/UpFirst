@model DAL.Models.Curso

@{
    ViewData["Title"] = "Delete";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h3 localize-content>Are you sure you want to delete this?</h3>
<div>
    <h4 localize-content>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer.Text("Course Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Localizer.Text("Description")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Localizer.Text("Price")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer.Text("Delete")" class="btn btn-danger" /> |
        <a asp-action="Index" localize-content>Back to List</a>
    </form>
</div>
