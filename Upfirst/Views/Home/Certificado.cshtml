@{
    ViewData["Title"] = "Certificado";
}

<div id="certificado" class="container">
    <img src="~/assets/images/Certificado.png" alt="Certificado" style="width:100%;">
    <div class="centered"><h2>@ViewData["NomeAluno"]</h2></div>
</div>

<div class="mt-5">
    <button class="btn btn-primary" onclick="PrintElem('certificado')" localize-content>Imprimir</button>
</div>

<link href="~/assets/css/certificado.css" rel="stylesheet" />

<script src="~/js/certificado.js"></script>