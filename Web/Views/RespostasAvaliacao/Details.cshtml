<div>
    <h4 localize-content>Evaluation Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pergunta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pergunta.Descricao)
        </dd>
        <dt class="col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
