@model DAL.Models.PerguntaAvaliacao

@{
    ViewData["Title"] = "Delete";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h3 localize-content>Are you sure you want to delete this?</h3>
<div>
    <h4 localize-content>Evaluation Question</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer.Text("Delete")" class="btn btn-danger" /> |
        <a asp-controller="Avaliacoes" asp-action="Index" asp-route-id="@Model.AvaliacaoId"  localize-content>Back to Evaluations</a>
    </form>
</div>
