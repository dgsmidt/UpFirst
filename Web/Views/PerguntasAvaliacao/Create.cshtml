@model DAL.Models.PerguntaAvaliacao

@{
    ViewData["Title"] = "Create";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h4 localize-content>Evaluation Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input name="AvaliacaoId" value="@ViewData["AvaliacaoId"]" />*@
            @*<input name="AvaliacaoId" value="@Model.AvaliacaoId" />*@
            <div class="form-group">
                <label asp-for="AvaliacaoId" class="control-label" localize-content>Evaluation</label>
                <select asp-for="AvaliacaoId" class="form-control" asp-items="ViewBag.AvaliacaoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label" localize-content>Question</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Text("Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Avaliacoes" asp-route-id="@ViewData["AvaliacaoId"]" asp-action="Index" localize-content>Back to Evaluations</a>
</div>

