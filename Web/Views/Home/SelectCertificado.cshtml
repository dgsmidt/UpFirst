@{
}
@using DAL.Models
@model IEnumerable<Matricula>

@{
    ViewData["Title"] = "Certificados";
}

<table class="table">
    <thead>
        <tr>
            <th localize-content>
                Cursos Concluídos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.Nome)
                </td>
                <td>
                    <a asp-action="Certificado" asp-route-matriculaId="@item.Id" localize-content>Select</a>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr>
                <td>Nenhum</td>
            </tr>
        }
    </tbody>
</table>


