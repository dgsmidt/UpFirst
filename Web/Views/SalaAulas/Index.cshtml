                        @* Tem a classe desativo tambem*@

                        @modulo.Descricao
                        @foreach (var aula in modulo.Aulas)
                        {
                            @*<li class="realizado"><a href="#">Aula 01</a></li>
                                <li class="ativo"><a href="#">Aula 02</a></li>*@
