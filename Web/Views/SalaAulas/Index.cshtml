@model Web.ViewModels.SalaAulaVM

@{
    Layout = "_LayoutUpFirst";
    ViewData["Title"] = "Sala de Aula";
    var anotacoes = "";
    var avaliacaoText = "";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;

    if (culture == "en")
    {
        avaliacaoText = "Evaluation";
    }
    else
    {
        avaliacaoText = "Avaliação";
    }
}

