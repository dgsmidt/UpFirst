@model DAL.Models.Aula

@{
    ViewData["Title"] = "Delete";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h3 localize-content>Are you sure you want to delete this?</h3>
<div>
    <h4 localize-content>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.NumeroAula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroAula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.Video)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Video)
        </dd>
        <dt class="col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.MaterialApoio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaterialApoio)
        </dd>
        <dt class="col-sm-2">
            @Localizer.Text("Module")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modulo.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer.Text("Delete")" class="btn btn-danger" /> |
        <a asp-controller="Cursos" asp-action="Index" asp-route-Id="@Model.Modulo.CursoId" asp-route-moduloId="@Model.Modulo.Id" localize-content>Back to Courses</a>
    </form>
</div>
