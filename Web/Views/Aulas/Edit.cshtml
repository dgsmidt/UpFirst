@model DAL.Models.Aula

@{
    ViewData["Title"] = "Edit";
}

<h1 localize-content>@ViewData["Title"]</h1>

<h4 localize-content>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Modulo" class="control-label" localize-content>Module</label>
                <select asp-for="ModuloId" class="form-control" asp-items="ViewBag.ModuloId"></select>
                <span asp-validation-for="ModuloId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroAula" class="control-label" localize-content>Lesson Sequence</label>
                <input asp-for="NumeroAula" class="form-control" />
                <span asp-validation-for="NumeroAula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video" class="control-label" localize-content>Video</label>
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.Text("Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" localize-content>Back to List</a>
</div>

