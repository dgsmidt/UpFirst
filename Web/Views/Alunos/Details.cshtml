@model DAL.Models.Aluno

@{
    ViewData["Title"] = "Details";
}

<h1 localize-content>@ViewData["Title"]</h1>

<div>
    <h4 localize-content>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2" localize-content>
            @Html.DisplayNameFor(model => model.NotaQuestionario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotaQuestionario)
        </dd>
        @foreach (var item in Model.Notas)
        {
            <dt class="col-sm-3">Nota @item.Modulo.Curso.Nome - @item.Modulo.Descricao</dt>
            <dd class="col-sm-9">
                @item.Valor
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" localize-content>Edit</a> |
    <a asp-action="Index" localize-content>Back to List</a>
</div>
